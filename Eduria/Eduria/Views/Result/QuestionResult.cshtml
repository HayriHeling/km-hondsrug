@model DataExamResultModel

@{
    ViewData["Title"] = "Data per vraag";
}

<h2>QuestionResult</h2>

<div class="row">
    <div class="medium-6 columns">
        <canvas id="myChart" width="400" height="400"></canvas>
    </div>
</div>
<script>
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'pie',
    data: {
        labels: ['Foutief beantwoord', 'Blue', 'Yellow'],
        datasets: [{
            label: 'Rood',
            data: [@Model.TimesWrong],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)'
            ],
            borderWidth: 3
        }]
    }
});
</script>