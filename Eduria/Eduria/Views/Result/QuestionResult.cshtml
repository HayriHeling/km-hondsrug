@model DataQuestionResultModel

@{
    ViewData["Title"] = "Data per vraag";
}

<b>@Model.Name</b>
<p>Totaal beantwoord: <b>@Model.TimesAnswerd</b></p>

<div class="row">
    <div class="medium-6 columns">
        <canvas id="questionChart" width="400" height="400"></canvas>
    </div>
</div>
<script>
var ctx = document.getElementById('questionChart').getContext('2d');
var questionChart = new Chart(ctx, {
    type: 'doughnut',
    data: {
        labels: ['Goed beantwoord', 'Foutief beantwoord'],
        datasets: [{
            label: 'Rood',
            data: [@Model.TimesGoodAtOnce, @Model.TimesWrong],
            backgroundColor: [
                'rgba(123, 239, 178, 1)',
                'rgba(255, 99, 132, 1)',
            ],
        }]
    },
    options: {
        reponsive: true
    }
});
</script>
